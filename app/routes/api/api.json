  "routesGroups": [
    {
      "controller": "index.js",
      "prefix": "/",
      "routes": [
        {
          "method": "get",
          "url": "/",
          "handler": "index"
        }
      ]
    },
    {
      "controller": "cemote.js",
      "prefix": "/cemote",
      "routes": [
        {
          "method": "post",
          "url": "/",
          "handler": "index"
        },
        {
          "method": "post",
          "url": "/help",
          "handler": "help"
        },
        {
          "method": "post",
          "url": "/list",
          "handler": "list"
        },
        {
          "method": "post",
          "url": "/search",
          "handler": "search"
        }
      ]
    },
    {
      "controller": "hello.js",
      "prefix": "/hello",
      "routes": [
        {
          "method": "get",
          "url": "/hello",
          "handler": "hello"
        },
        {
          "method": "get",
          "url": "/foo/:bar",
          "handler": "foo"
        },
        {
          "method": "get",
          "url": "/foo",
          "handler": "foo"
        },
        {
          "method": "get",
          "url": "/test",
          "handler": "test"
        },
        {
          "method": "post",
          "url": "/test",
          "handler": "test"
        },
        {
          "method": "get",
          "url": "/",
          "handler": "index"
        }
      ]
    }
  ]
